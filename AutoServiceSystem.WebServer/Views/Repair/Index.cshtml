@model List<AutoServiceSystem.BusinessObject.Repair>

@{
    ViewBag.Title = "Repair Dashboard";
}

<h1>Repair Dashboard</h1>

<div>
    <button onclick="location.href='/repair/create';return false;" class="add-new">Create New Repair</button>
</div>

<section>
    <div>
        <table>
            <tr>
                <th>CreatedDate</th>
                <th>Description</th>
                <th>Price</th>
                <th>Vehicle</th>
            </tr>
            @foreach (var repair in Model)
            {
                <tr>
                    <td>@repair.CreatedDate</td>
                    <td>@repair.Description</td>
                    <td>@repair.Price</td>
                    <td>@repair.Vehicle.Id</td>
                    <td>
                        <button onclick="location.href='/repair/edit/@repair.Id';return false;" class="edit">Edit</button>
                        <button onclick="location.href='/repair/delete/@repair.Id';return false;" class="delete">Delete</button>
                    </td>
                </tr>
            }
        </table>
    </div>
</section>