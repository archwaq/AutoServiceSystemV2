@model AutoServiceSystem.BusinessObject.Client

@{
    ViewBag.Title = "Delete Client";
}

<h1>Delete Client</h1>

<section>
    <div>
        @using (Html.BeginForm("Delete", "Client", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <label for="fullname">FullName</label>
                <input type="text" id="fullname" value="@Model.FullName" disabled />

                <label for="gender">Gender</label>
                <input type="text" id="gender" value="@Model.Gender" disabled />

                <label for="phone">Phone</label>
                <input type="text" id="phone" value="@Model.Phone" disabled />

                <label for="address">Address</label>
                <input type="text" id="address" value="@Model.Address" disabled />

                <label for="email">Email</label>
                <input type="text" id="email" value="@Model.Email" disabled />

                <label for="nationalcardnumber">NationalCardNumber</label>
                <input type="text" id="nationalcardnumber" value="@Model.NationalCardNumber" disabled />

                <label for="pin">PIN</label>
                <input type="text" id="pin" value="@Model.PIN" disabled />

                <button type="submit" class="accept">Delete</button>
                <button onclick="location.href = '/client/index'; return false;" class="cancel">Cancel</button>
            }
    </div>
</section>

